<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#99C8F8F8"
    >
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="BMI/BMR CALCULATOR"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#99C8F8F8"
        android:background="@drawable/shadow"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:gravity="center"
        />

    <RelativeLayout
        android:id="@+id/Rlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="Your Weight / আপনার ওজন "
            android:textColor="#1D4743"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editWeight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/textView2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:hint="  KG / কে.জি."
            android:inputType="number"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editWeight"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Your Height / আপনার উচ্চতা  "
            android:textColor="#1D4743"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editHeightFeet"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:hint="FEET / ফুট "
            android:inputType="number"
            android:textAlignment="center" />


        <EditText
            android:id="@+id/editHeightInches"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@id/textView3"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:hint="INCHES / ইঞ্চি "
            android:inputType="number"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editHeightFeet"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Your AGE / আপনার বয়স "
            android:textColor="#1D4743"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editAge"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:hint="AGE / বয়স "
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@id/textView4"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:hint="Date/Month/Year"
            android:inputType="date"
            android:textAlignment="center"
            />
        <CheckBox
            android:id="@+id/checkMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editAge"
            android:text="Male"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#1D4743"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            />
        <CheckBox
            android:id="@+id/checkFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editAge"
            android:text="Female"
            android:textSize="20sp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:textColor="#1D4743"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/calculate"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_below="@id/checkMale"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shadow"
            android:gravity="center"
            android:text="CALCULATE"
            android:textAlignment="center"
            android:textColor="#99C8F8F8"
            android:textSize="30dp"
            android:textStyle="bold"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/bmiDisplay"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Back"
            android:textColor="#99C8F8F8"
            android:layout_below="@id/bmiDisplay"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shadow"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center"

            />


    </RelativeLayout>





</RelativeLayout>